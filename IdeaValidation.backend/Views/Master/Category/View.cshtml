@model List<IdeaValidation.Core.ViewModel.Masters.CategoryViewViewModel>
<div class="modal-header" style="background-color:#5a5a5a; color:#fff;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="color:#fff">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel">View Category</h4>
</div>
<div class="modal-body">
    <div style="min-height:260px; ">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="widget-body no-padding">
                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                    <thead>
                        <tr>
                            <th data-hide="phone">#</th>
                            <th data-class="expand"><i class=""></i> Category</th>
                            <th data-hide="phone"><i class=""></i> Parent</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>
                                    @Model[i].Name
                                </td>
                                <td>
                                    @Model[i].ParentName
                                </td>
                                <td>
                                    <a href="#"><i class="fa fa-edit"></i></a>
                                </td>
                                <td>
                                    <a href="#"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </article>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $('#dt_basic').DataTable();
    </script>
}
