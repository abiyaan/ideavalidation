@model IdeaValidation.Core.ViewModel.Masters.CountryCreateViewModel
<div class="modal-header" style="background-color:#5a5a5a; color:#fff;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="color:#fff">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel">Create Country</h4>
</div>
@using (Ajax.BeginForm("CountryCreate", "Master", new AjaxOptions()
{
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure",
    Confirm = "Are you sure?",
    HttpMethod = "Post"
}))
{
<div class="modal-body">
    <code id="lastRecordCode" class="">
        @Model.LastRecord
    </code>
    <div style="min-height:250px; ">
        <div class="smart-form">
            <fieldset>
                <div class="row">
                    <section class="col col-sm-4 col-md-4 col-lg-4">
                        <label class="label">
                            Name
                        </label>
                    </section>
                    <section class="col-md-8 col-sm-12 col-lg-8">
                        <label class="select">
                            <label class="input">
                                <input type="text" id="Name" name="Name" placeholder="Name" />
                            </label>
                        </label>
                    </section>
                </div>
                <div class="row">
                    <section class="col col-sm-4 col-md-4 col-lg-4">
                        <label class="label">
                            Code
                        </label>
                    </section>
                    <section class="col-md-8 col-sm-12 col-lg-8">
                        <label class="input">
                            <input type="text" id="Code" name="Code" placeholder="Code" />
                        </label>
                    </section>
                </div>
                <div class="row">
                    <section class="col col-sm-4 col-md-4 col-lg-4">
                        <label class="label">
                            Currency Name
                        </label>
                    </section>
                    <section class="col-md-8 col-sm-12 col-lg-8">
                        <label class="select">
                            <label class="input">
                                <input type="text" id="CurrencyName" name="CurrencyName" placeholder="Currency Name" />
                            </label>
                        </label>
                    </section>
                </div>
                <div class="row">
                    <section class="col col-sm-4 col-md-4 col-lg-4">
                        <label class="label">
                            Currency Code
                        </label>
                    </section>
                    <section class="col-md-8 col-sm-12 col-lg-8">
                        <label class="select">
                            <label class="input">
                                <input type="text" id="CurrencyCode" name="CurrencyCode" placeholder="Currency Code" />
                            </label>
                        </label>
                    </section>
                </div>
            </fieldset>
        </div>
    </div>
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="btnSaveCountry">
            Save
        </button>
    </div>
}

<script type="text/javascript">

    function OnSuccess(result) {
        $.smallBox({
            title: "Ding Dong!",
            content: "Country Added succesfully",
            color: "green",
            icon: "fa fa-check swing animated"
        });
        $('#Name').val('');
        $('#Code').val('');
        $('#CurrencyCode').val('');
        $('#CurrencyName').val('');
    }

    function OnFailure(err) {
        $.smallBox({
            title: "Sorry!",
            content: "Unable to save this record",
            color: "red",
            icon: "fa fa-tick swing animated"
        });
    }
</script>