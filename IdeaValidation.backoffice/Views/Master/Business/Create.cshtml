<script type="text/javascript">
    $('.modal-body').parent().parent().css({ 'width': '75%'});
    $('.modal-body').parent().css({ 'height': '620px' });

    function OnSuccess(result) {
        if (result.Data === 0) {
            $.smallBox({
                title: "Error!",
                content: result.msg,
                color: "red",
                icon: "fa fa-times swing animated"
            });
        }
        else {
            $.smallBox({
                title: "Ding Dong!",
                content: result.msg,
                color: "green",
                icon: "fa fa-check swing animated"
            });
            switch (result.Page) {
                case 1:
                    $('#mainBusinessID').val(result.Data);
                    moveNext(1);
                    break;
            }
        }
    }

    function moveNext(pageIndex) {
        switch (pageIndex) {
            case 1:
                $('#tab1').removeClass('active');
                $('#step1').hide();
                $('ul.bootstrapWizard').find('li').eq(0).removeClass('active');
                $('#tab2').addClass('active');
                $('#step2').show();
                $('ul.bootstrapWizard').find('li').eq(1).addClass('active');
                break;
            case 2:
                break;
            case 3:
                break;
        }
    }

    function OnFailure(err) {
        $.smallBox({
            title: "Sorry!",
            content: err,
            color: "red",
            icon: "fa fa-times swing animated"
        });
    }
</script>